<svg id="root">

  <rect id="background" />

  <g id="calendar" transform="translate(100,160)">
    <text id="calendar-date">September 18</text>
  </g>

  <g id="days" font-size="26" transform="translate(0,13%)">
    <text id="days-mon">MON</text>
    <text id="days-tue">TUE</text>
    <text id="days-wed">WED</text>
    <text id="days-thu">THU</text>
    <text id="days-fri">FRI</text>
    <text id="days-sat">SAT</text>
    <text id="days-sun">SUN</text>
  </g>

  <g id="steps" transform="translate(0,80)" opacity="0">
    <rect class="line"/>
    <circle class="tgt-no"/>
    <circle class="tgt-yes"/>
    <rect class="progress"/>
    <text class="countGoal" text-length="20" text-anchor="end">32000</text>
    <text class="count" text-length="20">888</text>
    <text class="icon">🚶</text>
  </g>

  <g id="distance" transform="translate(0,112)" opacity="0">
    <rect class="line"/>
    <circle class="tgt-no"/>
    <circle class="tgt-yes"/>
    <rect class="progress"/>
    <text class="countGoal" text-length="20" text-anchor="end">32000</text>
    <text class="count" text-length="20">888</text>
    <text class="icon">📏</text>
  </g>

  <g id="calories" transform="translate(0,144)" opacity="0">
    <rect class="line"/>
    <circle class="tgt-no"/>
    <circle class="tgt-yes"/>
    <rect class="progress"/>
    <text class="countGoal" text-length="20" text-anchor="end">32000</text>
    <text class="count" text-length="20">888</text>
    <text class="icon">🔥</text>
  </g>

  <g id="elevationGain" transform="translate(0,176)" opacity="0">
    <rect class="line"/>
    <circle class="tgt-no"/>
    <circle class="tgt-yes"/>
    <rect class="progress"/>
    <text class="countGoal" text-length="20" text-anchor="end">32000</text>
    <text class="count" text-length="20">888</text>
    <text class="icon">🏗️</text>
  </g>

  <g id="activeZoneMinutes" transform="translate(0,208)" opacity="0">
    <rect class="line"/>
    <circle class="tgt-no"/>
    <circle class="tgt-yes"/>
    <rect class="progress"/>
    <text class="countGoal" text-length="20" text-anchor="end">32000</text>
    <text class="count" text-length="20">888</text>
    <text class="icon">⏳</text>
  </g>

  <g id="battery">
    <g transform="translate(-24%,31%)">
      <text class="value" id="battery-percent">100</text>
      <text class="value-icon" id="battery-icon">🔋</text>
      <text class="value-icon" id="battery-icon-charge">⚡</text>
    </g>
    <!-- line id="battery-bar" x1="0" y1="262" x2="336" y2="262" fill="fb-gray" stroke-width="1" / -->
  </g>

  <line x1="0" y1="276" x2="336" y2="276" fill="fb-extra-dark-gray" stroke-width="1" />
  <line x1="0" y1="302" x2="336" y2="302" fill="fb-extra-dark-gray" stroke-width="1" />

  <g id="clock" transform="translate(0,31%)">
    <text id="clock-time">00:00</text>
    <text id="clock-seconds">00</text>
  </g>

  <g id="hr" transform="translate(-90,156)">
    <text class="value-right" id="hr-zone">out-of-range</text>
    <text class="value" id="hr-value">---</text>
    <text class="value-icon" id="hr-systole">🖤</text>
    <text class="value-icon" id="hr-diastole">❤️</text>
  </g>

  <g id="city">
    <rect x="0" y="153" width="100%" height="2" fill="fb-dark-gray" />
    <rect x="0" y="155" width="100%" height="1" fill="fb-gray" />
    <rect x="0" y="156" width="100%" height="28" fill="fb-light-gray" />
    <rect x="0" y="183" width="100%" height="1" fill="fb-gray" />
    <rect x="0" y="184" width="100%" height="2" fill="fb-dark-gray" />
    <text x="2%" y="53%" fill="black" class="value-right">Antofagasta</text>
  </g>

  <g id="sunrise">
    <g transform="translate(28%,3%)">
      <text fill="black" class="value" id="suntimes-sunrise">--:--</text>
      <text class="value-icon">☀️</text>
    </g>
    <g transform="translate(44%,3%)">
      <text fill="black" class="value" id="suntimes-sunset">--:--</text>
      <text class="value-icon">🌙</text>
    </g>
  </g>

  <g id="barometer">
    <g transform="translate(-120,130)">
      <text class="value" id="barometer-altitude">4800.1</text>
      <text class="value-icon">⛰️</text>
    </g>
    <g transform="translate(-56,130)">
      <text class="value" id="barometer-pressure">1234.5</text>
      <text class="value-icon">🌀</text>
    </g>
  </g>

  <g id="user">
    <g transform="translate(-6,130)">
      <text class="value" id="user-bmr">2800.8</text>
      <text class="value-icon">✨</text>
    </g>
    <g transform="translate(44,130)">
      <text class="value" id="user-bmi">35.2</text>
      <text class="value-icon">⚖️</text>
    </g>
    <g transform="translate(96,130)">
      <text class="value" id="user-weight">110.0</text>
      <text class="value-icon">⏲️</text>
    </g>
    <g transform="translate(135,130)">
      <text class="value" id="user-rhr">60.8</text>
      <text class="value-icon">❤️</text>
    </g>
  </g>

  <rect id="torch"/>

  <text id="torch-touch" x="10%" y="80%" class="value-icon" pointer-events="visible" opacity="0.2">💡</text>
  <text id="clock-touch" x="95%" y="80%" class="value-icon" pointer-events="visible" opacity="0.2">⌚</text>

  <g transform="translate(50%,50%)">
    <g id="clock-seconds-hand" opacity="0">
      <line id="clock-seconds-hand" x1="0" y1="8%" x2="0" y2="-49%" stroke-width="2" fill="fb-yellow" />
      <text x="-13" y="6" font-size="26">🐱</text>
    </g>
  </g>

</svg>
